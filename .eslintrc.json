{
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "commonjs": true,
       "es2021": true,
       "node": true
    },
    "rules": {
        "comma-dangle": ["error", {
            "arrays": "never",
            "objects": "never",
            "imports": "never",
            "exports": "never",
            "functions": "never"
        }],
        "semi": ["error", "always"],
        "linebreak-style": 0,
         "global-require": 0,
        "no-restricted-syntax": ["error", "WithStatement", "BinaryExpression[operator='in']"]
    }
}
